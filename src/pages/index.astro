---
import { Image } from 'astro:assets'
import profil from '../../public/remi.jpg'
import BaseLayout from '@/layouts/BaseLayout.astro'
import { buttonVariants } from '@/components/ui/button'
---

<BaseLayout
  title="Astro Shadcn UI Template"
  description="This template helps you build apps with Astro, Tailwind CSS, and Shadcn UI."
>
  <section class="container max-w-screen-md mx-auto flex items-center justify-between gap-6 pb-8 pt-6 md:py-10">
    <div class="flex flex-col items-start gap-2">
      <h1
        class="text-3xl font-extrabold leading-tight tracking-tighter md:text-4xl"
      >
        REMI MEULLEMEESTRE
      </h1>
      <p class="text-lg text-muted-foreground">
        I'm a <span class="font-bold">full-stack developer</span> with <span
          class="font-bold">5+ years</span
        > of experience.
      </p>
    </div>
    <div class="grid place-items-center rounded-lg p-6 lg:overflow-visible">
      <Image
        src={profil}
        alt="profil picture"
        class="h-[120px] w-[120px] rounded-full object-cover object-center border-4"
      />
    </div>
  </section>
</BaseLayout>
