---
import { NavigationMenu } from '@/components/NavigationMenu.tsx'
import ThemeToggle from '@/components/ThemeToggle.astro'
import { HOMEPAGE_URL } from '../../config'

interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

const pathName: string = Astro.url.pathname
---

<header
  class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
>
  <div
    class="mx-auto flex h-16 max-w-screen-md items-center justify-between gap-7 space-x-4 px-2 sm:space-x-0"
  >
    <div class="flex gap-6 md:gap-10">
      <a href={HOMEPAGE_URL} class="w-max items-center space-x-2">
        <span class="inline-block font-bold">RÃ©mi Meullemeestre</span>
      </a>
    </div>

    <div
      class="flex flex-row-reverse justify-between gap-1 md:w-full md:flex-row md:gap-0"
    >
      <NavigationMenu pathName={pathName} client:idle />
      <ThemeToggle />
    </div>
  </div>
</header>
